{
  "version": 8,
  "name": "Pastel Map with Texture",
  "sprite": "https://raw.githubusercontent.com/henrysumm/DIS-Map/main/sprite", 
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f0f0f0"
      }
    },
    {
      "id": "water",
      "source": "mapbox",
      "source-layer": "water",
      "type": "fill",
      "paint": {
        "fill-pattern": "water-pattern",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "landuse",
      "source": "mapbox",
      "source-layer": "landuse",
      "type": "fill",
      "paint": {
        "fill-pattern": "land-pattern",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "buildings",
      "source": "mapbox",
      "source-layer": "building",
      "type": "fill",
      "paint": {
        "fill-color": "#dcd4c8",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "roads",
      "source": "mapbox",
      "source-layer": "road",
      "type": "line",
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.5,
          10, 1.5,
          15, 3,
          18, 5
        ]
      }
    }
  ]
}
