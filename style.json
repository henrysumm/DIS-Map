{
  "version": 8,
  "name": "Stockholm Clean Map",
  "sprite": "https://henrysumm.github.io/DIS-Map/sprite",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f0f0f0"
      }
    },
    {
      "id": "water",
      "source": "mapbox",
      "source-layer": "water",
      "type": "fill",
      "minzoom": 0,
      "paint": {
        "fill-pattern": "water-pattern",
        "fill-opacity": 1
      }
    },
    {
      "id": "landuse",
      "source": "mapbox",
      "source-layer": "landuse",
      "type": "fill",
      "minzoom": 10,
      "paint": {
        "fill-pattern": "land-pattern",
        "fill-opacity": 1
      }
    },
    {
      "id": "buildings",
      "source": "mapbox",
      "source-layer": "building",
      "type": "fill",
      "paint": {
        "fill-color": "#dcd4c8",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "major-roads",
      "source": "mapbox",
      "source-layer": "road",
      "type": "line",
      "filter": ["all",
      ["in", "class", "motorway", "trunk"],
      [">=", "lanes", 2]
        ],
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 2,
          10, 4,
          15, 8,
          18, 12
        ]
      }
    }
  ]
}
